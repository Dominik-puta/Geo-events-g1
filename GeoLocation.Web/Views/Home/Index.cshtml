@using GeoLocation.Model
@model List<Event>

@{
    ViewData["Title"] = "Geo Events";
}

<div class="panel panel-default">
    <div class="panel-heading">
        @ViewData["Title"]
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Event</td>
                <td>Description</td>
                <td>Entry Fee</td>
                <td>Limited Space</td>
                <td>Organizer</td>
                <td>Location</td>
                <td>Start</td>
                <td>End</td>
                <td>Category</td>
                <td>Subcategory</td>
                <td>Venue</td>
                <td>Status</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.EntryFee</td>
                    <td>@item.LimitedSpace</td>
                    <td>@item.Organizer</td>
                    <td>@item.Lat, 
                        @item.Long</td>
                    <td>@item.StartDate</td>
                    <td>@item.EndDate</td>
                    <td>@item.EventCategoryId</td>
                    <td>@item.EventSubcategoryId</td>
                    <td>@item.VenueId</td>
                    <td>@item.StatusId</td>
                </tr>
            }
        </tbody>
    </table>
</div>
